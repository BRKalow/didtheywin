<!DOCTYPE html>
<html ng-app="DidTheyWin">
<head>
  <title>Did They Win?</title>
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular-animate.min.js"></script>
  <script src="/js/app.js"></script>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="http://cdn.jsdelivr.net/animatecss/3.1.0/animate.min.css">
  <style type="text/css">
  body {
    background: url(/images/body_bg.jpg);
    background-size: fill;
    background-position: 50% 0%;
    background-repeat: no-repeat;
    padding-top: 100px;
  }
  h1.title {
    color: #fff;
    margin-bottom: 50px;
    -webkit-animation-duration: 1s;
  }
  form.check-form {
    -webkit-animation-delay: 1.5s;
  }
  .result {
    background: white;
    margin-top: 20px;
    padding-top: 20px;
    padding-bottom: 20px;
    border-radius: 3px;
  }
  .result .team-top {
    border-bottom: 1px solid lightgrey;
    padding: 0px 0px 20px 0px;
  }
  .result .team-bottom {
    padding: 20px 0px 0px 0px;
  }
  .result .logo-wrapper {
    padding: 20px 0px;
    text-align: center;
    float: left;
    width: 160px;
  }
  .result img.logo {
    height: 60px;
  }
  .result h3 > small {
    color: #333;
  }
  .result.ng-hide-remove {
    -webkit-animation: flipInX 1s;
  }
  .result .points {
    font-size: 2em;
    padding: 30px 0px 20px 0px;
    float: right;
    display: inline-block;
    width: 150px;
    text-align: center;
  }
  .loser {
    opacity: 0.6;
  }
  .winner .points {
    color: green;
  }
  .date {
    position: absolute;
    left: 75%;
    top: 42%;
    background: white;
    border-radius: 100px;
    padding: 10px 15px;
    z-index:  100;
    font-size: 1em;
    color: darkgrey;
    -webkit-box-shadow: 0 2px 10px 0 rgba(0,0,0,.16);
    box-shadow: 0 2px 10px 0 rgba(0,0,0,.16)
  }
  </style>
</head>
<body ng-controller="MainCtrl">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <h1 class="title" ng-class="{'animated bounceInLeft': !entrance}">
              Did They Win? <br/>
              <small>Missed the game? No problem! Check the result here.</small>
            </h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <form ng-submit="submit()" name="check" class="form-inline check-form" ng-class="{'animated pulse': !entrance}">
              <input type="text" name="team" ng-model="team" value="" class="form-control input-lg" />
              <input type="submit" name="submit" value="Check" class="btn btn-primary btn-lg" />
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-2"></div>
      <div class="col-md-6 result" ng-show="result && result.hasOwnProperty('team_name' )" ng-animate="animated pulse">
        <span class="date">{{ result.date }}</span>
        <div class="row team-top" ng-class="{'winner': result.outcome == 'win', 'loser': result.outcome == 'loss'}">
          <div class="col-md-12">
            <div class="logo-wrapper">
              <img class="logo" src="/images/logos/{{ result.team_id }}.gif" alt="{{ result.team_name }}" />
            </div>
            <span class="points">{{ result.points_scored }}</span>
          </div>
        </div>
        <div class="row team-bottom" ng-class="{'loser': result.outcome == 'win', 'winner': result.outcome == 'loss'}">
          <div class="col-md-12">
            <div class="logo-wrapper">
              <img class="logo" src="/images/logos/{{ result.team_id_opponent }}.gif" alt="{{ result.team_name_opponent }}" />
            </div>
            <span class="points">{{ result.points_scored_opponent }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
